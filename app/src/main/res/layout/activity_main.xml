<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:background="#000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:text="编号:"
            android:textColor="#E0EEEE"
            android:layout_centerVertical="true"
            android:id="@+id/tvw"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="1234567890"
            android:textColor="#9ACD32"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:src="@mipmap/xiabiao"
            android:id="@+id/iv5"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvw"
            android:layout_toStartOf="@+id/tvw" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/kumo"
            android:id="@+id/iV4"
            android:layout_alignTop="@+id/iv5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/fl"
        android:layout_width="match_parent"
       android:layout_height="650dp"
       android:background="#000"
        android:layout_below="@+id/rl1">
        <VideoView 
        android:id="@+id/mp4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"      
       />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl"
        android:scaleType="fitXY"
        android:src="@mipmap/m625177391252266721" />
    
      <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerInside"
        android:src="@mipmap/buybg"
        android:id="@+id/infoOperating"
        android:layout_marginRight="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
       />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerInside"
        android:src="@mipmap/buyup"
        android:id="@+id/anim_iv"
        android:onClick="onClick"
        android:layout_alignTop="@+id/infoOperating"
        android:layout_alignLeft="@+id/infoOperating"
        android:layout_alignStart="@+id/infoOperating" />
</RelativeLayout>
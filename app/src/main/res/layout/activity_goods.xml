<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:background="#000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:text="编号:"
            android:textColor="#E0EEEE"
            android:layout_centerVertical="true"
            android:id="@+id/tvw"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="1234567890"
            android:textColor="#9ACD32"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
           />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:src="@mipmap/xiabiao"
            android:id="@+id/iv5"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvw"
            android:layout_toStartOf="@+id/tvw" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/kumo"
            android:id="@+id/iV4"
            android:layout_alignTop="@+id/iv5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />
    </RelativeLayout>

  <ImageView
      android:layout_width="400dp"
      android:layout_height="40dp"
      android:layout_below="@+id/rl1"
      android:scaleType="fitStart"
      android:src="@mipmap/leibie"
      android:id="@+id/imgyiliao"/>

    <GridView
        android:id="@+id/gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downimg"
        android:layout_weight="2"
        android:numColumns="3"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:verticalSpacing="10sp"
       android:layout_marginBottom="115dp"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:id="@+id/downimg"
        android:padding="8dp"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:src="@mipmap/upsroll"
        android:layout_below="@+id/imgyiliao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:id="@+id/downimga"
        android:padding="8dp"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:src="@mipmap/downsroll"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/goumai"
        android:id="@+id/imageView5"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="30dp"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/quhuo"
        android:id="@+id/imageView6"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/bangzhu"
        android:id="@+id/imageView7"
        android:layout_alignParentBottom="true"
        android:onClick="onCliceHelp"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp" />
</RelativeLayout>
